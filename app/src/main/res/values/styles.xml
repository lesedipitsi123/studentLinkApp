<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/work_sans</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/work_sans</item>
    </style>
    <style name="NormalEditTextStyle" parent="Widget.Design.TextInputLayout">
        <item name="colorControlHighlight">@color/material_grey_200</item>
        <item name="colorControlNormal">@color/material_grey_200</item>
        <item name="colorControlActivated">@color/active_edittext</item>
    </style>

    <color name="active_edittext">#05386B</color>
</resources>
