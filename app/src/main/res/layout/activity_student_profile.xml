<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context=".view.profile.StudentProfile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16_dp">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/dimen_96_dp"
            android:layout_height="@dimen/dimen_96_dp"
            android:background="@drawable/border_circle"
            android:contentDescription="@null"
            android:src="@mipmap/ic_avatar_medium"
            app:layout_constraintBottom_toTopOf="@id/about"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16_dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/dimen_16_dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/sample_username"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/textColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/avatar"
            app:layout_constraintTop_toTopOf="@id/avatar" />

        <TextView
            android:id="@+id/about"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:paddingTop="@dimen/dimen_8_dp"
            android:paddingBottom="@dimen/dimen_8_dp"
            android:text="@string/lorem_ipsum_short"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/material_grey_700"
            app:layout_constraintBottom_toBottomOf="@id/avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/avatar"
            app:layout_constraintTop_toBottomOf="@id/user_name"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/h1_contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_32_dp"
            android:text="@string/sample_contact"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/rich_black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/btnWhatsapp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/about" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWhatsapp"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="?attr/listPreferredItemHeight"
            android:layout_marginTop="@dimen/dimen_8_dp"
            android:gravity="center_vertical"
            android:insetLeft="-16dp"
            android:text="@string/sample_whatsapp"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@color/rich_black"
            app:backgroundTint="@null"
            app:cornerRadius="@dimen/dimen_0_dp"
            app:icon="@mipmap/ic_whatsapp"
            app:iconGravity="start"
            app:iconPadding="@dimen/dimen_16_dp"
            app:iconSize="@dimen/dimen_24_dp"
            app:iconTint="@color/material_grey_400"
            app:layout_constraintBottom_toTopOf="@id/btnPhone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/h1_contact"
            app:rippleColor="@color/material_grey_300" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPhone"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="?attr/listPreferredItemHeight"
            android:layout_marginTop="@dimen/dimen_8_dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:text="@string/sample_phone"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@color/rich_black"
            android:visibility="gone"
            app:backgroundTint="@null"
            app:cornerRadius="@dimen/dimen_0_dp"
            app:icon="@mipmap/baseline_call_black_24"
            app:iconGravity="start"
            app:iconPadding="@dimen/dimen_16_dp"
            app:iconSize="@dimen/dimen_24_dp"
            app:iconTint="@color/material_grey_400"
            app:layout_constraintBottom_toTopOf="@id/btnEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnWhatsapp"
            app:rippleColor="@color/material_grey_300" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEmail"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="?attr/listPreferredItemHeight"
            android:layout_marginTop="@dimen/dimen_8_dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:text="@string/sample_email"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@color/rich_black"
            app:backgroundTint="@null"
            app:cornerRadius="@dimen/dimen_0_dp"
            app:icon="@mipmap/ic_email_black_24"
            app:iconGravity="start"
            app:iconPadding="@dimen/dimen_16_dp"
            app:iconSize="@dimen/dimen_24_dp"
            app:iconTint="@color/material_grey_400"
            app:layout_constraintBottom_toTopOf="@id/h1_courses"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnPhone"
            app:rippleColor="@color/material_grey_300" />

        <TextView
            android:id="@+id/h1_courses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_32_dp"
            android:text="@string/sample_course"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/rich_black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/listCourses"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnEmail" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listCourses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clipChildren="true"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/h1_courses"
            tools:itemCount="7"
            tools:listitem="@layout/item_course" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>